{
    "display": "Next.js",
    "extends": "config/base.json",
    "compilerOptions": {
        "plugins": [{ "name": "next" }],
        "allowJs": true,
        "declaration": false,
        "declarationMap": false,
        "incremental": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "noEmit": true,
        "resolveJsonModule": true,
        "strict": false,
        "target": "es5",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
